          .invest-section__card-wrapper.card-rotate-inc.swiper-slide.card-margin-top
            .invest-section__card
              .invest-section__card-title.font-w-b-regular.font-s-28.color-black V.I.P
              .invest-section__card-sub-title.font-w-b-regular.font-s-20.color-white формат
              img.invest-section__card-icon(src="images/invest-section-card-icon2.svg" loading="lazy" width="68" height="24" alt="icon")
