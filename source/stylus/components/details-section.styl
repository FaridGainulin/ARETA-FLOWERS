.details-section
  background-image: url('../images/details-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #121212
  position relative
  height: 440px
  +above($breakpoints.sm)
    height: 650px
  +above($breakpoints.md)
    height: 800px
  +above($breakpoints.xxl)
    height: 913px

  &__container-wrapper
    padding 5px
    background-color rgba(255, 255, 255, 0.1);
    border-radius: 20px
    position: absolute
    width 308px
    top: -30px
    +above($breakpoints.sm)
      padding 10px
      width 726px
      top: -50px
    +above($breakpoints.md)
      width 966px
      top: -80px
      padding 15px
    +above($breakpoints.xxl)
      top: -120px
      width 1310px
      padding 25px

  &__container
    position relative
    padding 20px 0 0 0
    background-image: url('../images/details-section-cont-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color #092621
    border-radius: 15px
    +above($breakpoints.sm)
      padding 40px 0 0 0
    +above($breakpoints.md)
      padding 60px 0 0 0
    +above($breakpoints.xxl)
      padding 82px 0 0 0

  &__line
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      background-color #E3CD96
      width: 30px;
      height: 1px;
      top: 57px;
      left: 11px;
    +above($breakpoints.md)
      width: 50px;
      height: 2px;
      top: 80px;
      left: 16px;
    +above($breakpoints.xxl)
      width: 72px;
      height: 3px;
      top: 111px;
      left: 33px;

  &__test
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width 200px
      height: auto
      top: 52px;
      right: 66px;
    +above($breakpoints.md)
      width 300px
      width: 300px;
      top: 72px;
      right: 77px;
    +above($breakpoints.xxl)
      width 377px
      top: 92px;
      right: 130px;

  &__dash-1
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width: 235px;
      height: 3px;
      top: 213px;
      left: 49px;
    +above($breakpoints.md)
      width: 284px;
      height: 3px;
      top: 277px;
      left: 79px;
    +above($breakpoints.xxl)
      width: 300px;
      height: 3px;
      top: 373px;
      left: 129px;

  &__dash-2
