  &__title
    padding 0 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 35px 50px
    +above($breakpoints.md)
      padding 0 0 40px 80px
    +above($breakpoints.xxl)
      padding 0 0 63px 130px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      gap: 30px 20px
      margin-left 50px
    +above($breakpoints.md)
      gap: 40px 20px
      margin-left 80px
    +above($breakpoints.xxl)
      margin-left 130px
      width 700px
      gap: 52px 30px

  &__card
    width 280px !important
    display: flex
    flex-direction: row
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      width 275px !important
    +above($breakpoints.md)
      width 335px !important
      gap: 20px
    +above($breakpoints.xxl)
      letter-spacing: -1px
      width 320px !important

  &__bottom
    background-color #294C47
    padding 20px 10px 20px 10px
    margin-top 20px
    border-bottom-left-radius: 15px
    border-bottom-right-radius: 15px
    +above($breakpoints.sm)
      margin-top 39px
    +above($breakpoints.md)
      padding 29px 20px 45px 20px
      margin-top 49px
    +above($breakpoints.xxl)
      margin-top 59px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    padding-top 20px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
    +above($breakpoints.md)
      padding-top 25px
      gap: 10px
    +above($breakpoints.xxl)
      padding-top 30px

.details-item
  width 260px !important
  +above($breakpoints.sm)
    width 200px !important
  +above($breakpoints.md)
    width 220px !important
  +above($breakpoints.xxl)
    width 250px !important
.details-item-btn
  width 260px !important
  +above($breakpoints.sm)
    width 200px !important
  +above($breakpoints.sm)
    width 230px !important
  +above($breakpoints.xxl)
    width 277px !important



.wrapper-details
  max-width: 320px
  margin: 0 auto
  padding: 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width: 750px
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 996px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1350px

